#!/bin/bash
# dsadasdas
# File path for PID file
PID_FILE="/var/run/myscript.pid"

# Try to write PID to file, fail gracefully if permission denied
if ! echo $$ > "$PID_FILE" 2>/dev/null; then
    echo "Failed to write PID file. Are you running without root?"
    exit 1
fi

# Handlers
handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

# Set traps
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap cleanup_and_exit SIGQUIT

# Main loop
while true
do
    echo "To infinity and beyond"
    sleep 1
done
