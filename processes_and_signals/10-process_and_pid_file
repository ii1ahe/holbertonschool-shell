#!/bin/bash
# dsadasdas
# File path for PID file
PID_FILE="/var/run/myscript.pid"

# Write the current script's PID to the file
echo $$ > "$PID_FILE"

# Signal handlers
handle_sigterm() {
    echo "I hate the kill command"
    cleanup_and_exit
}

handle_sigint() {
    echo "Y U no love me?!"
}

cleanup_and_exit() {
    rm -f "$PID_FILE"
    exit 0
}

# Trap signals
trap handle_sigterm SIGTERM
trap handle_sigint SIGINT
trap cleanup_and_exit SIGQUIT

# Main loop
while true
do
    echo "To infinity and beyond"
    sleep 1
done
